{% extends 'base.html.twig' %}
{% block title %}
	{{ titulo }}
{% endblock %}
{%
block body %}
	<h1>{{ titulo }}</h1>
	<div class="float-end">
		<a href="{{ path('categoria_create') }}" class="btn btn-primary">
			+ Adicionar</a>
	</div>
	<table class="table table-hover">
		<thead>
			<tr>
				<th>Id</th>
				<th>Categoria</th>
				<th>Ações</th>
			</tr>
		</thead>
		<tbody>
			{% for c in categorias %}
				<tr>
					<td>{{ c.id }}</td>
					<td>{{ c.descricaocategoria }}</td>
					<td>
						<a href="{{ path('categoria_edit', { id: c.id }) }}" class="btn btn-secondary">
							Editar
						</a>
						<a href="{{ path('categoria_delete', { id: c.id }) }}" class="btn btn-danger">Excluir</a>
					</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
{% endblock %}
